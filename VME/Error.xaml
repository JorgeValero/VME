<Window x:Class="VME.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VME"
        mc:Ignorable="d"
        Title="Error" Height="145.696" Width="425.805" Icon="Resources/logotipoVME-sin fondos.ico">
    <Grid x:Name="gridError" Background="#FF1D1B1B">
        <TextBlock Foreground="White" x:Name="mensajeVentanaError" TextWrapping="Wrap" Text="Aquí va el mensaje" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="89,21,0,0" Height="56" Width="319"/>
        <Image Source="Resources/iconoInformacion.png" x:Name="imagenVentanaError" HorizontalAlignment="Left" Height="67" Margin="10,10,0,0" VerticalAlignment="Top" Width="67"/>
        <Button Foreground="White" Background="#FF1FA031" x:Name="aceptarError" Content="Aceptar" HorizontalAlignment="Left" Margin="333,85,0,0" VerticalAlignment="Top" Width="75" Click="aceptarError_Click"/>
        <Button x:Name="button" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Width="20" Height="17" Click="button_Click">
            <Image Name="imagenMicrofono" Source="Resources/iconoMicrofonoDesactivado.png"/>
        </Button>
    </Grid>
</Window>
